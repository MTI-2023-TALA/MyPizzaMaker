<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BackOffice.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BackOffice"
    Shell.FlyoutBehavior="Disabled">
    <Shell.Resources />

    <TabBar>
        <ShellContent Icon="bag.png" Title="Ingredient" ContentTemplate="{DataTemplate local:IngredientPage}" />
        <ShellContent Title="Commandes" Icon="cart.png" ContentTemplate="{DataTemplate local:CommandPage}" />
        <ShellContent Title="Statistiques" Icon="bar_chart.png" ContentTemplate="{DataTemplate local:StatPage}" />
    </TabBar>
</Shell>
