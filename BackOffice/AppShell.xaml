<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BackOffice.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BackOffice"
    Shell.FlyoutBehavior="Disabled">
    <Shell.Resources />

    <NavigationPage.TitleView>
        <HorizontalStackLayout Spacing="5" Margin="5">
            <Label VerticalOptions="Center" HorizontalOptions="Center" Text="My Pizza Maker"/>
            <Button Text="{Binding Ingredient.Title}"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Clicked="OnButtonIngredientClicked" />
            <Button Text="{Binding Command.Title}"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Clicked="OnButtonCommandCLicked" />
            <Button Text="{Binding Stats.Title}"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Clicked="OnButtonStatsCLicked" />
        </HorizontalStackLayout>
    </NavigationPage.TitleView>

    <ShellContent Title="{Binding Ingredient.Title}"
                  Icon="{AppThemeBinding Light=discover.png, Dark=discover_dark.png}"
                  ContentTemplate="{DataTemplate local:IngredientPage}"/>
</Shell>
