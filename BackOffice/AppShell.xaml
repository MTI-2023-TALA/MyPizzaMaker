<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BackOffice.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BackOffice"
    xmlns:viewmodels="clr-namespace:BackOffice.ViewModal"
    x:DataType="viewmodels:ShellViewModel"
    Shell.FlyoutBehavior="Disabled">
    <Shell.Resources />

    <TabBar>
        <ShellContent Title="{Binding Ingredient.Title}" Icon="{Binding Ingredient.Icon}" ContentTemplate="{DataTemplate local:IngredientPage}" />
        <ShellContent Title="{Binding Command.Title}" Icon="{Binding Command.Icon}" ContentTemplate="{DataTemplate local:CommandPage}" />
        <ShellContent Title="{Binding Stats.Title}" Icon="{Binding Stats.Icon}" ContentTemplate="{DataTemplate local:StatPage}" />
    </TabBar>
</Shell>
